<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="layout">
        <item name="android:background">@color/lightBackground</item>
    </style>

    <style name="inputText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/lightBackground</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/shadeGray</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="outputText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/lightBackground</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/tintGray</item>
        <item name="android:textSize">62sp</item>
    </style>

    <style name="s_operator_btn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/s_operator_selector_light</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="operator_btn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/operator_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:onClick">operatorClick</item>
    </style>

    <style name="operand_btn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/operand_selector_light</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:tint">@color/black</item>
        <item name="android:onClick">operandClick</item>
    </style>

</resources>